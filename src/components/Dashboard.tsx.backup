/* ----------------- Medication Safety view ----------------- */

type RiskLevel = "critical" | "high" | "medium" | "low" | "all";
type SortOption = "priority" | "name" | "allergyCount";

interface PatientWithRisk extends Patient {
  riskLevel: RiskLevel;
  riskScore: number;
  allergyCount: number;
  medications?: any[];
  interactions?: string[];
  clinicalNote?: string;
}

const MedicationSafetyView: React.FC<DashboardSectionProps> = ({ onPatientClick }) => {
  const [safetyData, setSafetyData] = useState<any>(null);
  const [patients, setPatients] = useState<Patient[]>([]);
  const [enrichedPatients, setEnrichedPatients] = useState<PatientWithRisk[]>([]);
  const [loading, setLoading] = useState(true);
  const [filterRisk, setFilterRisk] = useState<RiskLevel>("all");
  const [sortBy, setSortBy] = useState<SortOption>("priority");
  const [searchQuery, setSearchQuery] = useState("");

  useEffect(() => {
    const loadSafetyData = async () => {
      try {
        setLoading(true);
        const [alerts, patientsData] = await Promise.all([
          getSafetyAlerts(),
          fetchPatients(),
        ]);
        setSafetyData(alerts.summary);
        setPatients(patientsData);

        // Enrich patients with risk assessment
        const enriched = await enrichPatientsWithRiskData(patientsData);
        setEnrichedPatients(enriched);
      } catch (err) {
        console.error("Error loading safety data:", err);
      } finally {
        setLoading(false);
      }
    };

    loadSafetyData();
  }, []);

  // Enrich patients with risk levels and additional safety data
  const enrichPatientsWithRiskData = async (patientsList: Patient[]): Promise<PatientWithRisk[]> => {
    const enrichedPromises = patientsList.map(async (patient) => {
      const allergies = patient.allergies;
      const allergyCount = Array.isArray(allergies) ? allergies.length : (allergies ? 1 : 0);

      // Fetch actual medications for this patient
      let medications: any[] = [];
      try {
        medications = await fetchPatientMedications(patient.id);
      } catch (err) {
        console.error(`Failed to fetch medications for patient ${patient.id}:`, err);
      }

      // Calculate risk score (0-100)
      let riskScore = 0;
      let riskLevel: RiskLevel = "low";
      let clinicalNote = "";
      const interactions: string[] = [];

      if (allergyCount > 0) {
        riskScore += allergyCount * 25;

        // Check for high-risk allergies
        const allergyList = Array.isArray(allergies) ? allergies : [allergies];
        const highRiskAllergies = ["penicillin", "cephalosporin", "nsaid", "aspirin", "sulfa", "contrast", "ibuprofen", "diclofenac"];
        const hasHighRiskAllergy = allergyList.some((a: string) =>
          highRiskAllergies.some((hra) => a.toLowerCase().includes(hra))
        );

        if (hasHighRiskAllergy) {
          riskScore += 30;
          clinicalNote = "Patient has documented high-risk drug allergies. Cross-check all prescriptions.";
        }

        // Check for medication-allergy interactions
        if (medications.length > 0) {
          medications.forEach((med) => {
            const medName = (med.medication_name || med.name || "").toLowerCase();
            allergyList.forEach((allergy: string) => {
              const allergyLower = allergy.toLowerCase();

              // Check for direct contraindications
              if (
                (allergyLower.includes("penicillin") && (medName.includes("amoxicillin") || medName.includes("ampicillin"))) ||
                (allergyLower.includes("nsaid") && (medName.includes("ibuprofen") || medName.includes("diclofenac") || medName.includes("aspirin"))) ||
                (allergyLower.includes("sulfa") && medName.includes("sulfamethoxazole"))
              ) {
                interactions.push(`‚ö†Ô∏è ${med.medication_name || med.name} may interact with ${allergy} allergy`);
                riskScore += 25; // Significant risk increase
              }
            });
          });
        }

        // Check age risk factors
        const age = parseInt(patient.age || "0");
        if (age > 65) {
          riskScore += 15;
          clinicalNote += " Elderly patient - increased ADR risk.";
        } else if (age < 5 && age > 0) {
          riskScore += 15;
          clinicalNote += " Pediatric patient - dose adjustments required.";
        }

        // Multiple allergies = higher complexity
        if (allergyCount >= 3) {
          riskScore += 20;
          clinicalNote += " Multiple drug allergies - consult pharmacy.";
        }

        // Polypharmacy risk (5+ medications)
        if (medications.length >= 5) {
          riskScore += 10;
          clinicalNote += ` Polypharmacy detected (${medications.length} medications) - monitor interactions.`;
        }
      }

      // Cap risk score at 100
      riskScore = Math.min(riskScore, 100);

      // Assign risk level based on score
      if (riskScore >= 75) {
        riskLevel = "critical";
      } else if (riskScore >= 50) {
        riskLevel = "high";
      } else if (riskScore >= 25) {
        riskLevel = "medium";
      } else if (allergyCount > 0) {
        riskLevel = "low";
      }

      return {
        ...patient,
        riskLevel,
        riskScore,
        allergyCount,
        medications,
        interactions,
        clinicalNote: clinicalNote.trim() || "Standard precautions apply.",
      };
    });

    const enrichedPatients = await Promise.all(enrichedPromises);
    return enrichedPatients.filter((p) => p.allergyCount > 0); // Only show patients with allergies
  };

  // Filter and sort patients
  const filteredPatients = enrichedPatients
    .filter((p) => {
      // Risk level filter
      if (filterRisk !== "all" && p.riskLevel !== filterRisk) return false;

