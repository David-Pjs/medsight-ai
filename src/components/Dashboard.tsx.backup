        const query = searchQuery.toLowerCase();
        const fullName = `${p.first_name} ${p.last_name}`.toLowerCase();
        const uniqueId = (p.unique_id || "").toLowerCase();
        const allergiesStr = Array.isArray(p.allergies)
          ? p.allergies.join(" ").toLowerCase()
          : String(p.allergies || "").toLowerCase();

        return fullName.includes(query) ||
               uniqueId.includes(query) ||
               allergiesStr.includes(query);
      }

      return true;
    })
    .sort((a, b) => {
      if (sortBy === "priority") {
        return b.riskScore - a.riskScore;
      } else if (sortBy === "name") {
        return `${a.first_name} ${a.last_name}`.localeCompare(`${b.first_name} ${b.last_name}`);
      } else if (sortBy === "allergyCount") {
        return b.allergyCount - a.allergyCount;
