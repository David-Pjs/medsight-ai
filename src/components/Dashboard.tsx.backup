      {/* Enhanced stats cards */}
      <section className="grid gap-4 md:grid-cols-4">
        <div className="rounded-2xl bg-gradient-to-br from-rose-50 to-rose-100 border border-rose-200 p-4">
          <p className="text-xs font-semibold text-rose-700 flex items-center gap-1">
            <span className="text-lg">üö®</span> Critical Risk
          </p>
          <p className="mt-2 text-3xl font-bold text-rose-900">
            {loading ? "..." : criticalCount}
          </p>
          <p className="mt-1 text-xs text-rose-700">
            Immediate attention required
          </p>
        </div>

        <div className="rounded-2xl bg-gradient-to-br from-orange-50 to-orange-100 border border-orange-200 p-4">
          <p className="text-xs font-semibold text-orange-700 flex items-center gap-1">
            <span className="text-lg">‚ö†Ô∏è</span> High Priority
          </p>
          <p className="mt-2 text-3xl font-bold text-orange-900">
            {loading ? "..." : highCount}
          </p>
          <p className="mt-1 text-xs text-orange-700">
            Review before prescribing
          </p>
        </div>

        <div className="rounded-2xl bg-gradient-to-br from-amber-50 to-amber-100 border border-amber-200 p-4">
          <p className="text-xs font-semibold text-amber-700 flex items-center gap-1">
            <span className="text-lg">‚ö°</span> Medium Risk
          </p>
          <p className="mt-2 text-3xl font-bold text-amber-900">
            {loading ? "..." : mediumCount}
          </p>
          <p className="mt-1 text-xs text-amber-700">
            Monitor during treatment
          </p>
        </div>

        <div className="rounded-2xl bg-gradient-to-br from-emerald-50 to-emerald-100 border border-emerald-200 p-4">
          <p className="text-xs font-semibold text-emerald-700 flex items-center gap-1">
            <span className="text-lg">‚úì</span> Low Risk
          </p>
          <p className="mt-2 text-3xl font-bold text-emerald-900">
            {loading ? "..." : lowCount}
          </p>
          <p className="mt-1 text-xs text-emerald-700">
            Standard precautions
          </p>
        </div>
      </section>

      {/* Filters and search */}
      <section className="rounded-2xl bg-white border border-slate-100 shadow-sm shadow-slate-100 p-4 md:p-5">
        <div className="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
          <div>
