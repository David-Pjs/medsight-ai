interface DashboardSectionProps {
  onPatientClick?: (patient: Patient) => void;
}

const DashboardOverview: React.FC<DashboardSectionProps> = ({
  onPatientClick,
}) => {
  const [patients, setPatients] = useState<Patient[]>([]);
  const [encounters, setEncounters] = useState<any[]>([]);
  const [loading, setLoading] = useState(true);
  const [searchQuery, setSearchQuery] = useState("");
  const searchInputRef = React.useRef<HTMLInputElement>(null);

  const [summaryPatient, setSummaryPatient] = useState<Patient | null>(null);
  const [summaryText, setSummaryText] = useState<string | null>(null);
  const [summaryLoading, setSummaryLoading] = useState(false);
  const [summaryError, setSummaryError] = useState<string | null>(null);

  // Safety metrics
  const [safetyMetrics, setSafetyMetrics] = useState({
    critical: 0,
    high: 0,
    medium: 0,
    low: 0,
  });

  useEffect(() => {
    const loadDashboardData = async () => {
      try {
        setLoading(true);
        const [patientsData, encountersData] = await Promise.all([
          fetchPatients(),
          fetchEncounters().catch(() => []),
        ]);
        setPatients(patientsData);
        setEncounters(encountersData);

        // Calculate safety metrics
        const metrics = { critical: 0, high: 0, medium: 0, low: 0 };
        for (const patient of patientsData) {
          const allergies = patient.allergies;
          const allergyCount = Array.isArray(allergies) ? allergies.length : (allergies ? 1 : 0);

          if (allergyCount > 0) {
            let riskScore = allergyCount * 25;

            // Check for high-risk allergies
            const allergyList = Array.isArray(allergies) ? allergies : [allergies];
            const highRiskAllergies = ["penicillin", "cephalosporin", "nsaid", "aspirin", "sulfa", "contrast", "ibuprofen", "diclofenac"];
            const hasHighRiskAllergy = allergyList.some((a: string) =>
              highRiskAllergies.some((hra) => a.toLowerCase().includes(hra))
            );

            if (hasHighRiskAllergy) riskScore += 30;

            const age = parseInt(patient.age || "0");
            if (age > 65 || (age < 5 && age > 0)) riskScore += 15;
            if (allergyCount >= 3) riskScore += 20;

            riskScore = Math.min(riskScore, 100);

            if (riskScore >= 75) metrics.critical++;
            else if (riskScore >= 50) metrics.high++;
            else if (riskScore >= 25) metrics.medium++;
            else metrics.low++;
          }
        }

        setSafetyMetrics(metrics);
      } catch (err) {
        console.error("Error loading dashboard data:", err);
      } finally {
        setLoading(false);
      }
    };

    loadDashboardData();
  }, []);

  // Keyboard shortcut for search (Ctrl+K or Cmd+K)
